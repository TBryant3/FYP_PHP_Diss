@{
    ViewBag.Title = "Login Form";
}
<head>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>

    <style>
        input[type=text], input[type=password] {
            width: 100%;
            padding: 1%;
         
            display: inline-block;
            background-color: aliceblue;
        }

        input[type=text]:focus, input[type=password]:focus 
        {
            background-color: #ddd;
        }

        .formContainer 
        {
            padding: 10%;
            background-color: blue;
        }

        #signin-container 
        {
            border: dashed;
            background-color: aqua;
        }
    </style>
</head>


<form method="post" name="loginForm" action="">
    <div class="formContainer">
        <div class="row">
            <div class="col-25"></div>
            <div class="col-50">
                <h2><strong>Login Form</strong></h2>
                <h2 style="text-align:center">@ViewBag.Message</h2>
            </div>
            <div class="col-25"></div>
            <div class="row">
                <div class="col-25"></div>
                <div class="col-25">
                    <label for="username">Username:</label>
                </div>
                <div class="col-25">
                    <input type="text" name="username" id="username" placeholder="E.g.cojoUser1...">
                </div>
            </div>
            <div class="col-25"></div>
            <div class="row">
                <div class="col-25">
                    <label for="username">Username:</label>
                </div>
                <br />
                <input type="text" name="username" id="username" placeholder="E.g.cojoUser1...">
            </div>
        </div>
    </div>


        <br />
        <br />
        <label>Password:</label>
        <br />
        <input type="password" name="password" id="password" placeholder="Insert password...">
        <br />
        <br />
        <input type="submit" value="Submit" class="submit">

</form>



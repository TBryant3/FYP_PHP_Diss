        <p>
            Here is some text to fill the void of my heart.
        </p>
        <div id="progressBarCS1" style="position:relative">
            <script>
                $(document).ready(function ($)
                {
                    $('#t2Btn1').button();
                    $('#progressBarCS1').progressbar(
                        {
                            value: 0,
                            create: function (e)
                            {
                                $('#pbcs-label1').text($('#progressBarCS1').progressbar("value"));
                            },
                            complete: function (e)
                            {
                                $('#t2Btn1').button("disable"),
                                $('#t2Btn1').text("Completed")
                            },
                            change: function (e)
                            {
                                if ($(this).progressbar("value") < 100)
                                {
                                    $('#t2Btn1').button("enable")
                                }
                                $('#pbcs-label1').text($('#progressBarCS1').progressbar("value"));
                            }
                        });
                    //Button click
                    $('#t2Btn1').click(function (e)
                    {
                        $('#progressBarCS1').progressbar({ value: 100 });
                    })
                });
            </script>
            Progress Completed: <strong><span id="pbcs-label1" style="position:absolute; left:37%"></span></strong>
        </div>
        <button id="t2Btn1">Click me to complete</button>
    </div>
